---
import Layout from "@/layouts/Layout.astro";
import PostCard from "@/components/elements/PostCard/PostCard.astro";
import Pagination from "@/components/elements/Pagination/Pagination.astro";
import sanityClient from "@/lib/sanity";
import { getCollection } from "astro:content";
import { POSTS_PER_PAGE } from "@/lib/constants";

export const prerender = true;

// Get all topics and generate paths for all pages
export async function getStaticPaths() {
  const topics = await sanityClient.fetch<
    Array<{ slug: { current: string }; title: string }>
  >(
    `*[_type == "topic"] {
      slug,
      title
    }`
  );

  const paths = [];

  for (const topic of topics) {
    const posts = await getCollection(`posts-${topic.slug.current}` as any);
    const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE);

    // Generate paths for pages 2 and onwards (page 1 is at /resources/topic/{topic})
    for (let i = 2; i <= totalPages; i++) {
      paths.push({
        params: {
          topic: topic.slug.current,
          page: String(i),
        },
        props: {
          topicTitle: topic.title,
        },
      });
    }
  }

  return paths;
}

const { topic, page } = Astro.params;
const { topicTitle } = Astro.props;
const currentPage = parseInt(page);

const allPosts = await getCollection(`posts-${topic}` as any);
const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);

// Validate page number
if (currentPage < 1 || currentPage > totalPages) {
  return Astro.redirect("/404");
}

// Get posts for current page
const startIndex = (currentPage - 1) * POSTS_PER_PAGE;
const endIndex = startIndex + POSTS_PER_PAGE;
const posts = allPosts.slice(startIndex, endIndex);
---

<Layout>
  <div class="topic-page">
    <div class="topic-page__container">
      <header class="topic-page__header">
        <h1 class="topic-page__title">{topicTitle}</h1>
        <p class="topic-page__count">
          {allPosts.length}
          {allPosts.length === 1 ? "post" : "posts"}
        </p>
      </header>

      {
        posts && posts.length > 0 ? (
          <>
            <div class="topic-page__grid">
              {posts.map((post: any) => (
                <PostCard post={post.data} />
              ))}
            </div>

            <Pagination
              currentPage={currentPage}
              totalPages={totalPages}
              baseUrl={`/resources/topic/${topic}`}
            />
          </>
        ) : (
          <div class="topic-page__empty">
            <p>No posts available on this page.</p>
          </div>
        )
      }

      <div class="topic-page__back">
        <a href="/resources" class="topic-page__back-link">
          ‚Üê View all resources
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .topic-page {
    width: 100%;
    min-height: 100vh;
    background: #f9fafb;
  }

  .topic-page__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  .topic-page__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .topic-page__title {
    margin: 0 0 1rem;
    font-size: 3rem;
    font-weight: 800;
    color: #1f2937;
  }

  .topic-page__count {
    margin: 0;
    font-size: 1.125rem;
    color: #6b7280;
  }

  .topic-page__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .topic-page__empty {
    text-align: center;
    padding: 4rem 2rem;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    margin-bottom: 2rem;
  }

  .topic-page__empty p {
    margin: 0;
    font-size: 1.125rem;
    color: #6b7280;
  }

  .topic-page__back {
    text-align: center;
    padding-top: 2rem;
  }

  .topic-page__back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #6366f1;
    text-decoration: none;
    background: #fff;
    border: 2px solid #6366f1;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .topic-page__back-link:hover {
    background: #6366f1;
    color: #fff;
  }

  @media (min-width: 640px) {
    .topic-page__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .topic-page__container {
      padding: 5rem 2rem;
    }

    .topic-page__title {
      font-size: 4rem;
    }
  }

  @media (min-width: 1024px) {
    .topic-page__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
