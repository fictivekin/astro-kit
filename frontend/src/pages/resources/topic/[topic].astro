---
import Layout from "../../../layouts/Layout.astro";
import PostCard from "@/components/elements/PostCard/PostCard.astro";
import { sanityClient } from "@/lib/sanity";
import { fetchPostsByTopic } from "@/lib/queries/post";

// Get all topics for static generation
export async function getStaticPaths() {
  const topics = await sanityClient.fetch<
    Array<{ slug: { current: string }; title: string }>
  >(
    `*[_type == "topic"] {
      slug,
      title
    }`
  );

  return topics.map((topic) => ({
    params: { topic: topic.slug.current },
    props: { topicTitle: topic.title },
  }));
}

const { topic } = Astro.params;
const { topicTitle } = Astro.props;

const posts = await fetchPostsByTopic(topic);

// Return 404 if topic not found or has no posts
if (!posts || posts.length === 0) {
  return Astro.redirect("/404");
}
---

<Layout>
  <div class="topic-page">
    <div class="topic-page__container">
      <header class="topic-page__header">
        <h1 class="topic-page__title">{topicTitle}</h1>
        <p class="topic-page__count">
          {posts.length}
          {posts.length === 1 ? "post" : "posts"}
        </p>
      </header>

      <div class="topic-page__grid">
        {posts.map((post) => <PostCard post={post} />)}
      </div>

      <div class="topic-page__back">
        <a href="/resources" class="topic-page__back-link">
          ‚Üê View all resources
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .topic-page {
    width: 100%;
    min-height: 100vh;
    background: #f9fafb;
  }

  .topic-page__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  .topic-page__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .topic-page__title {
    margin: 0 0 1rem;
    font-size: 3rem;
    font-weight: 800;
    color: #1f2937;
  }

  .topic-page__count {
    margin: 0;
    font-size: 1.125rem;
    color: #6b7280;
  }

  .topic-page__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .topic-page__back {
    text-align: center;
    padding-top: 2rem;
  }

  .topic-page__back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #6366f1;
    text-decoration: none;
    background: #fff;
    border: 2px solid #6366f1;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .topic-page__back-link:hover {
    background: #6366f1;
    color: #fff;
  }

  @media (min-width: 640px) {
    .topic-page__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .topic-page__container {
      padding: 5rem 2rem;
    }

    .topic-page__title {
      font-size: 4rem;
    }
  }

  @media (min-width: 1024px) {
    .topic-page__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
