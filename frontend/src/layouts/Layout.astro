---
import { ClientRouter, fade } from "astro:transitions";
import SiteHeader from "@/components/SiteHeader.astro";
import SiteFooter from "@/components/SiteFooter.astro";
import Seo from "@/layouts/Seo.astro";

interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  noIndex?: boolean;
  image?: string;
  imageAlt?: string;
  ogType?: string;
}

const { title, description, keywords, noIndex, image, imageAlt, ogType } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <Seo
      title={title}
      description={description}
      keywords={keywords}
      noIndex={noIndex}
      image={image}
      imageAlt={imageAlt}
      ogType={ogType}
    />
    <ClientRouter />
  </head>
  <body>
    <SiteHeader />
    <main transition:animate={fade({ duration: "0.5s" })}>
      <slot />
    </main>
    <SiteFooter />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html,
  body {
    background-color: #ffffff;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
