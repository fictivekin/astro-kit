---
import { resolveLink } from "@/lib/linkResolver";
import type { Cta } from "@/lib/schemas/page";

interface Props {
  label: string;
  variant?: "primary" | "secondary" | "tertiary";
  size?: "small" | "regular" | "large";
  linkType?: Cta["linkType"];
  href?: string;
  hash?: string;
  page?: Cta["page"];
  simplePage?: Cta["simplePage"];
  post?: Cta["post"];
  file?: Cta["file"];
  openInNewTab?: boolean;
}

const {
  label,
  variant = "primary",
  size = "regular",
  linkType,
  href: hrefProp,
  hash,
  page,
  simplePage,
  post,
  file,
  openInNewTab,
} = Astro.props;

// Build link object for resolver
const linkObj = {
  linkType,
  href: hrefProp,
  hash,
  page,
  simplePage,
  post,
  file,
  openInNewTab,
};
const href = resolveLink(linkObj);
const target = openInNewTab ? "_blank" : "_self";
---

<a
  href={href}
  target={target}
  rel={target === "_blank" ? "noopener noreferrer" : undefined}
  class={`button button--${variant} button--${size}`}
>
  {label}
</a>

<style>
  .button {
    display: inline-block;
    text-decoration: none;
    font-weight: 500;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    cursor: pointer;
    text-align: center;
    border: 2px solid transparent;
  }

  /* Sizes */
  .button--small {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
  }

  .button--regular {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
  }

  .button--large {
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }

  /* Variants */
  .button--primary {
    background-color: #5dbea3;
    color: #ffffff;
  }

  .button--primary:hover {
    background-color: #4da88c;
  }

  .button--secondary {
    background-color: transparent;
    color: #5dbea3;
    border-color: #5dbea3;
  }

  .button--secondary:hover {
    background-color: #5dbea3;
    color: #ffffff;
  }

  .button--tertiary {
    background-color: transparent;
    color: #333333;
    border-color: transparent;
    text-decoration: underline;
  }

  .button--tertiary:hover {
    color: #5dbea3;
  }
</style>
