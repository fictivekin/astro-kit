---
import Button from "@/components/elements/Button/Button.astro";
import type { Cta } from "@/lib/schemas/page";

interface Props {
  cta?: Cta[];
}

const { cta = [] } = Astro.props;
---

{
  cta && cta.length > 0 && (
    <>
      {cta.map((button) => (
        <Button
          label={button.label}
          variant={button.variant}
          size={button.size}
          linkType={button.linkType}
          href={button.href}
          hash={button.hash}
          page={button.page}
          simplePage={button.simplePage}
          post={button.post}
          file={button.file}
          openInNewTab={button.openInNewTab}
        />
      ))}
    </>
  )
}
