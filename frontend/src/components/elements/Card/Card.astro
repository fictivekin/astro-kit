---
import { PortableText } from "astro-portabletext";
import Heading from "@/components/elements/Heading/Heading.astro";
import Media from "@/components/elements/Media/Media.astro";
import type { MulticardItem } from "@/lib/schemas/page";

interface Props {
  card: MulticardItem;
  lazyLoad?: boolean;
  semanticLevel?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { card, lazyLoad = true, semanticLevel = "h3" } = Astro.props;

// Determine card link if clickable
let cardHref = "";
let cardTarget = "_self";

if (card.makeClickable && card.link) {
  const link = card.link;

  if (link.linkType === "href" && link.href) {
    cardHref = link.href;
    if (link.href.startsWith("http")) {
      cardTarget = "_blank";
    }
  } else if (link.linkType === "hash" && link.hash) {
    cardHref = link.hash;
  } else if (link.linkType === "page" && link.page?.slug?.current) {
    cardHref = `/${link.page.slug.current}`;
  } else if (link.linkType === "simplePage" && link.simplePage?.slug?.current) {
    cardHref = `/${link.simplePage.slug.current}`;
  } else if (link.linkType === "post" && link.post?.slug?.current) {
    cardHref = `/blog/${link.post.slug.current}`;
  } else if (link.linkType === "file" && link.file?.asset?.url) {
    cardHref = link.file.asset.url;
    cardTarget = "_blank";
  }
}

const CardWrapper = card.makeClickable && cardHref ? "a" : "div";
---

<CardWrapper
  href={card.makeClickable ? cardHref : undefined}
  target={card.makeClickable && cardTarget === "_blank" ? "_blank" : undefined}
  rel={card.makeClickable && cardTarget === "_blank"
    ? "noopener noreferrer"
    : undefined}
  class={`card ${card.makeClickable ? "card--clickable" : ""}`}
>
  {
    card.media && (
      <div class="card__media">
        <Media media={card.media} lazyLoad={lazyLoad} />
      </div>
    )
  }

  <div class="card__content">
    {card.eyebrow && <p class="card__eyebrow">{card.eyebrow}</p>}

    {
      card.title?.length && (
        <div class="card__title">
          <Heading text={card.title} semanticLevel={semanticLevel} />
        </div>
      )
    }

    {
      card.subhead?.length > 0 && (
        <div class="card__subhead">
          <PortableText value={card.subhead} />
        </div>
      )
    }

    {
      card.body?.length > 0 && (
        <div class="card__body">
          <PortableText value={card.body} />
        </div>
      )
    }
  </div>
</CardWrapper>

<style>
  .card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #f8f8f8;
    border-radius: 0.5rem;
    overflow: hidden;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .card--clickable {
    cursor: pointer;
    text-decoration: none;
    color: inherit;
  }

  .card--clickable:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .card__media {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: #e0e0e0;
  }

  .card__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
  }

  .card__eyebrow {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #666666;
    margin: 0;
  }

  .card__title {
    margin: 0;
  }

  .card__title :global(h3) {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
  }

  .card__subhead {
    font-size: 0.95rem;
    font-weight: 500;
    color: #555555;
  }

  .card__subhead :global(p) {
    margin: 0;
  }

  .card__body {
    font-size: 0.95rem;
    line-height: 1.5;
    color: #666666;
  }

  .card__body :global(p) {
    margin: 0 0 0.5rem 0;
  }

  .card__body :global(p:last-child) {
    margin-bottom: 0;
  }
</style>
