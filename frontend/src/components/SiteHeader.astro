---
import { getCollection } from "astro:content";
import ResolvedLink from "@/components/elements/ResolvedLink.astro";
import type { MainNavigation } from "@/lib/schemas/navigation";

interface Props {}

// Fetch main navigation from content collection
const mainNavigationEntries = await getCollection("mainNavigation");
const mainNavigation: MainNavigation | undefined =
  mainNavigationEntries[0]?.data;
const navItems = mainNavigation?.items || [];
---

<header>
  <nav class="header__container">
    {navItems.map((item) => <ResolvedLink link={item.link} />)}
  </nav>
</header>
