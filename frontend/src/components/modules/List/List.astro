---
import { PortableText } from "astro-portabletext";
import StringTextHeading from "@/components/elements/Heading/StringTextHeading.astro";
import Cta from "@/components/elements/Cta/Cta.astro";
import Section from "@/components/elements/Section/Section.astro";
import type { List, ListItem } from "@/lib/schemas/page";
import type { SemanticLevel } from "@/lib/types";
import { resolveLink } from "@/lib/linkResolver";

interface Props {
  list: List;
  lazyLoad?: boolean;
  semanticLevel?: SemanticLevel;
}

const { list, lazyLoad = true, semanticLevel = "h2" } = Astro.props;

const {
  theme = "light",
  variant = "one-column",
  showIndex = false,
  eyebrow,
  title,
  subhead,
  body,
  cta,
  items = [],
} = list;

// Determine if we have headline content to show
const hasHeadline = eyebrow || title || subhead?.length || body?.length;
---

<Section
  class:list={[
    "list",
    theme && `list--${theme}`,
    variant && `list--${variant}`,
    showIndex && "list--show-index",
  ]}
>
  <div class="list__container">
    {
      hasHeadline && (
        <div class="list__header">
          {eyebrow && <p class="list__eyebrow">{eyebrow}</p>}

          {title && (
            <div class="list__title">
              <StringTextHeading text={title} semanticLevel={semanticLevel} />
            </div>
          )}

          {subhead?.length > 0 && (
            <div class="list__subhead">
              <PortableText value={subhead} />
            </div>
          )}

          {body?.length > 0 && (
            <div class="list__body">
              <PortableText value={body} />
            </div>
          )}

          {cta && cta.length > 0 && (
            <div class="list__cta">
              <Cta cta={cta} />
            </div>
          )}
        </div>
      )
    }

    {
      items && items.length > 0 && (
        <div class="list__items">
          {items.map((item: ListItem, index: number) => {
            const itemContent = (
              <>
                {showIndex && <span class="list__item-index">{index + 1}</span>}
                <div class="list__item-content">
                  {item.eyebrow && (
                    <p class="list__item-eyebrow">{item.eyebrow}</p>
                  )}
                  {item.title && <p class="list__item-title">{item.title}</p>}
                  {item.subhead?.length > 0 && (
                    <div class="list__item-subhead">
                      <PortableText value={item.subhead} />
                    </div>
                  )}
                  {item.body?.length > 0 && (
                    <div class="list__item-body">
                      <PortableText value={item.body} />
                    </div>
                  )}
                  {!item.wrapInLink && item.cta && item.cta.length > 0 && (
                    <div class="list__item-cta">
                      <Cta cta={item.cta} />
                    </div>
                  )}
                </div>
              </>
            );

            // Get the first CTA link if wrapInLink is true
            const linkHref =
              item.wrapInLink && item.cta?.[0]
                ? resolveLink(item.cta[0])
                : null;

            return (
              <div class="list__item">
                {linkHref ? (
                  <a href={linkHref} class="list__item-link">
                    {itemContent}
                  </a>
                ) : (
                  <div class="list__item-inner">{itemContent}</div>
                )}
              </div>
            );
          })}
        </div>
      )
    }
  </div>
</Section>

<style>
  .list--light {
    background-color: #ffffff;
    color: #333333;
  }

  .list--dark {
    background-color: #1a1a1a;
    color: #ffffff;
  }

  .list__container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .list__header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-bottom: 2rem;
  }

  .list__eyebrow {
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #666666;
    margin: 0;
  }

  .list--dark .list__eyebrow {
    color: #a0a0a0;
  }

  .list__title {
    margin: 0;
  }

  .list__title :global(h1),
  .list__title :global(h2) {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
  }

  .list__subhead {
    font-size: 1.25rem;
    line-height: 1.5;
  }

  .list__subhead :global(p) {
    margin: 0;
  }

  .list__body {
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .list__body :global(p) {
    margin: 0 0 1rem 0;
  }

  .list__body :global(p:last-child) {
    margin-bottom: 0;
  }

  .list__cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .list__items {
    display: flex;
    flex-direction: column;
    border-top: 1px solid currentColor;
    opacity: 0.15;
  }

  .list__item {
    border-bottom: 1px solid currentColor;
  }

  .list__items,
  .list__item {
    opacity: 1;
    border-color: rgba(128, 128, 128, 0.2);
  }

  .list__item-link,
  .list__item-inner {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    padding: 2rem 0;
    text-decoration: none;
    color: inherit;
  }

  .list__item-link:hover {
    opacity: 0.8;
  }

  .list__item-index {
    font-size: 4rem;
    font-weight: 300;
    line-height: 1;
    font-style: italic;
    min-width: 5rem;
    flex-shrink: 0;
    color: #6b46c1;
  }

  .list--dark .list__item-index {
    color: #9f7aea;
  }

  .list__item-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
    padding-top: 0.5rem;
  }

  .list__item-eyebrow {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #666666;
    margin: 0;
  }

  .list--dark .list__item-eyebrow {
    color: #a0a0a0;
  }

  .list__item-title {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
  }

  .list__item-subhead {
    font-size: 1rem;
    line-height: 1.5;
  }

  .list__item-subhead :global(p) {
    margin: 0;
  }

  .list__item-body {
    font-size: 1rem;
    line-height: 1.6;
    color: #555555;
  }

  .list--dark .list__item-body {
    color: #b0b0b0;
  }

  .list__item-body :global(p) {
    margin: 0 0 0.75rem 0;
  }

  .list__item-body :global(p:last-child) {
    margin-bottom: 0;
  }

  .list__item-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  /* Two-column layout */
  .list--two-column .list__items {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0 3rem;
    border-top: none;
  }

  .list--two-column .list__item {
    border-bottom: 1px solid rgba(128, 128, 128, 0.2);
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .list__title :global(h1),
    .list__title :global(h2) {
      font-size: 2rem;
    }

    .list__item-link,
    .list__item-inner {
      gap: 1.5rem;
      padding: 1.5rem 0;
    }

    .list__item-index {
      font-size: 3rem;
      min-width: 3.5rem;
    }

    .list--two-column .list__items {
      grid-template-columns: 1fr;
    }
  }
</style>
