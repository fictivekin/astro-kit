---
import { PortableText } from "astro-portabletext";
import RichTextHeading from "@/components/elements/Heading/RichTextHeading.astro";
import Media from "@/components/elements/Media/Media.astro";
import Cta from "@/components/elements/Cta/Cta.astro";
import type { Hero } from "@/lib/schemas/page";

interface Props {
  hero: Hero;
  lazyLoad?: boolean;
  semanticLevel?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
}

const { hero, lazyLoad = true, semanticLevel = "h1" } = Astro.props;

const { theme = "light", eyebrow, title, subhead, body, media, cta } = hero;
---

<section class={`hero hero--${theme}`}>
  <div class="hero__container">
    {
      media && (
        <div class="hero__media">
          <Media media={media} lazyLoad={lazyLoad} />
        </div>
      )
    }

    <div class="hero__content">
      {eyebrow && <p class="hero__eyebrow">{eyebrow}</p>}

      {
        title?.length > 0 && (
          <div class="hero__title">
            <RichTextHeading text={title} semanticLevel={semanticLevel} />
          </div>
        )
      }

      {
        subhead?.length > 0 && (
          <div class="hero__subhead">
            <PortableText value={subhead} />
          </div>
        )
      }

      {
        body?.length > 0 && (
          <div class="hero__body">
            <PortableText value={body} />
          </div>
        )
      }

      {
        cta && cta.length > 0 && (
          <div class="hero__cta">
            <Cta cta={cta} />
          </div>
        )
      }

      <my-counter></my-counter>
    </div>
  </div>
</section>

<script>
  import "./Hero.tsx";
</script>

<style>
  .hero {
    padding: 6rem 2rem;
    width: 100%;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .hero--light {
    background-color: #f8f8f8;
    color: #333333;
  }

  .hero--dark {
    background-color: #1a1a1a;
    color: #ffffff;
  }

  .hero__container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 3rem;
  }

  .hero__media {
    width: 100%;
    max-width: 800px;
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
    max-width: 800px;
  }

  .hero__eyebrow {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .hero--light .hero__eyebrow {
    color: #666666;
  }

  .hero--dark .hero__eyebrow {
    color: #aaaaaa;
  }

  .hero__title {
    margin: 0;
  }

  .hero__title :global(h1) {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
  }

  .hero__subhead {
    font-size: 1.5rem;
    font-weight: 500;
    line-height: 1.4;
  }

  .hero__subhead :global(p) {
    margin: 0;
  }

  .hero__body {
    font-size: 1.25rem;
    line-height: 1.6;
  }

  .hero__body :global(p) {
    margin: 0 0 1rem 0;
  }

  .hero__body :global(p:last-child) {
    margin-bottom: 0;
  }

  .hero__cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 0.5rem;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .hero {
      padding: 4rem 1.5rem;
      min-height: 50vh;
    }

    .hero__container {
      gap: 2rem;
    }

    .hero__title :global(h1) {
      font-size: 2.5rem;
    }

    .hero__subhead {
      font-size: 1.25rem;
    }

    .hero__body {
      font-size: 1.125rem;
    }
  }
</style>
